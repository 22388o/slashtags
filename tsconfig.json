{
  "compilerOptions": {
    "strict": true,
    // project options
    "allowJs": true,
    "checkJs": true,
    "target": "ESNEXT",
    "noEmitOnError": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    // module resolution
    "esModuleInterop": true,
    "moduleResolution": "node",
    // linter checks
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    // advanced
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    // paths
    "paths": {
      "@synonymdev/slashtags-*": ["./packages/*"]
    }
  }
}
