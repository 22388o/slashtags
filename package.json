{
  "name": "slashtags-js",
  "scripts": {
    "postinstall": "lerna link && lerna bootstrap --hoist --ci",
    "test": "lerna exec npm t",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "publish": "lerna publish --contents dist",
    "clean": "npm run clean:deps && npm run clean:build && npm run clean:coverage",
    "clean:build": "rm -rf ./packages/*/dist",
    "clean:coverage": "rm -rf ./packages/*/coverage",
    "clean:deps": "rm -rf ./node_modules packages/*/node_modules packages/*/package-lock.json package-lock.json",
    "check-prepublish": "lerna run prepublishOnly",
    "full-check": "npm run clean && npm i && npm run check-prepublish"
  },
  "type": "module",
  "keywords": [
    "hypercore",
    "slashtags",
    "wot",
    "p2p"
  ],
  "author": "nazeh",
  "devDependencies": {
    "@types/node": "^16.7.13",
    "ava": "^3.15.0",
    "dependency-check": "^4.1.0",
    "hundreds": "^0.0.9",
    "ipjs": "^5.1.0",
    "lerna": "^4.0.0",
    "standard": "^16.0.3",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "./packages/*"
  ]
}
