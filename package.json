{
  "name": "slashtags-js",
  "scripts": {
    "postinstall": "lerna bootstrap --hoist --ci",
    "test": "lerna exec npm t",
    "build": "lerna run build:types",
    "publish:release-candidate": "lerna publish --allow-branch release-candidate --conventional-prerelease --dist-tag next --preid rc --no-verify-access --yes",
    "publish:latest": "lerna publish --allow-branch master --conventional-graduate --create-release github --no-verify-access --yes",
    "lint": "lerna run lint",
    "clean": "npm run clean:deps",
    "clean:deps": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules"
  },
  "type": "module",
  "keywords": [
    "hypercore",
    "slashtags",
    "wot",
    "p2p"
  ],
  "author": "nazeh",
  "devDependencies": {
    "@types/node": "^16.7.10",
    "ava": "^3.15.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "prettier": "2.3.2",
    "typescript": "^4.2.4"
  }
}
